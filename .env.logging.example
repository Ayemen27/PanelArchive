# ==============================================================================
# Logging Environment Variables Configuration
# ==============================================================================
# Copy this file to .env and configure as needed
# cp .env.logging.example .env
# ==============================================================================

# ==============================================================================
# Application Logging Configuration
# ==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
# json = structured JSON logs (recommended for Loki)
# text = human-readable text logs
LOG_FORMAT=json

# Log file path
LOG_FILE=/app/logs/app.log

# Log rotation settings
# Maximum log file size in bytes (10MB = 10485760)
LOG_MAX_BYTES=10485760

# Number of backup files to keep
LOG_BACKUP_COUNT=5

# ==============================================================================
# Loki Configuration
# ==============================================================================

# Loki server URL (internal Docker network)
LOKI_URL=http://loki:3100

# Loki push URL
LOKI_PUSH_URL=http://loki:3100/loki/api/v1/push

# ==============================================================================
# Promtail Configuration
# ==============================================================================

# Promtail server port
PROMTAIL_PORT=9080

# Positions file location
PROMTAIL_POSITIONS_FILE=/tmp/positions.yaml

# ==============================================================================
# Log Labels (for Loki)
# ==============================================================================

# Application name
APP_NAME=aapanel

# Environment: development, staging, production
APP_ENV=production

# Service name
SERVICE_NAME=btpanel

# ==============================================================================
# Advanced Logging Options
# ==============================================================================

# Enable console logging (true/false)
LOG_TO_CONSOLE=true

# Enable file logging (true/false)
LOG_TO_FILE=true

# Enable syslog (true/false)
LOG_TO_SYSLOG=false

# Syslog server (if LOG_TO_SYSLOG=true)
SYSLOG_SERVER=localhost:514

# ==============================================================================
# Performance Tuning
# ==============================================================================

# Log buffer size (number of log entries to buffer before writing)
LOG_BUFFER_SIZE=100

# Flush interval in seconds
LOG_FLUSH_INTERVAL=5

# ==============================================================================
# Security
# ==============================================================================

# Sanitize sensitive data in logs (true/false)
LOG_SANITIZE_SENSITIVE=true

# Patterns to sanitize (comma-separated)
LOG_SANITIZE_PATTERNS=password,token,secret,api_key,credit_card
