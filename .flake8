# ==================== إعدادات Flake8 ====================
# Flake8 Configuration File

[flake8]
# الحد الأقصى لطول السطر
max-line-length = 120

# الأخطاء والتحذيرات المتجاهلة
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504,  # line break after binary operator
    F401,  # imported but unused (في بعض الملفات)
    E722,  # bare except (نستخدمه أحياناً)

# الملفات والمجلدات المستثناة
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .eggs,
    pyenv/,
    BTPanel/,
    class/,
    class_v2/,
    data/,
    install/,
    logs/,
    mod/,
    plugin/,
    htmlcov/,
    .coverage

# العدد الأقصى للتعقيد (McCabe complexity)
max-complexity = 15

# عرض الإحصائيات
statistics = True

# عرض الكود المصدري
show-source = True

# عدد الأخطاء
count = True
